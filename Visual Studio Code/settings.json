{
    //
    // Better Zen mode
    // "workbench.editor.showTabs": false,
    // "editor.codeLens": false,
    // "editor.minimap.enabled": false,
    // "editor.lineNumbers": "off",
    // "workbench.activityBar.visible": false,
    //
    "[php]": {
        "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
    },
    "editor.autoIndent": "advanced",
    "editor.formatOnPaste": false,
    "editor.formatOnType": true,
    "editor.formatOnSave": false,
    "editor.fontSize": 17,
    "editor.letterSpacing": 0,
    "editor.lineHeight": 35,
    "editor.fontFamily": "FiraCode Nerd Font",
    "editor.smoothScrolling": true,
    "editor.renderWhitespace": "all",
    "editor.trimAutoWhitespace": true,
    "editor.renderLineHighlight": "all",
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    "editor.acceptSuggestionOnEnter": "on",
    "editor.minimap.enabled": false,
    "editor.cursorStyle": "line-thin",
    "editor.cursorWidth": 5,
    "editor.tabSize": 4,
    "editor.autoClosingBrackets": "always",
    "editor.selectionHighlight": true,
    "editor.cursorBlinking": "smooth",
    "editor.folding": true,
    "editor.matchBrackets": "always",
    "editor.useTabStops": true,
    "editor.dragAndDrop": true,
    "editor.quickSuggestions": {
        "strings": true
    },
    "editor.rulers": [50, 72, 80, 120],
    "editor.wordWrap": "off",
    "editor.wordWrapColumn": 72,
    "editor.colorDecorators": true,
    "editor.renderControlCharacters": true,
    "editor.fontLigatures": true,
    "editor.tabCompletion": "on",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.snippetSuggestions": "bottom",
    "editor.minimap.scale": 1,
    "editor.suggest.preview": true,
    "editor.guides.indentation": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    //
    "diffEditor.ignoreTrimWhitespace": false,
    //
    "breadcrumbs.enabled": true,
    "breadcrumbs.symbolSortOrder": "position",
    //
    "workbench.commandPalette.preserveInput": true,
    "workbench.editor.enablePreview": true,
    "workbench.editor.showIcons": true,
    "workbench.editor.showTabs": true,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.labelFormat": "default",
    "workbench.list.smoothScrolling": true,
    "workbench.fontAliasing": "default",
    "workbench.editor.tabSizing": "fit",
    "workbench.list.multiSelectModifier": "ctrlCmd",
    "workbench.list.horizontalScrolling": true,
    "workbench.settings.editor": "ui",
    "workbench.tree.indent": 8,
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorTheme": "Monokai",
                            // Dare Contrast (rainglow) |
                            // Bold Light (rainglow)
                            // Monokai Pro
    "workbench.editor.splitSizing": "split",
    "workbench.colorCustomizations": {
        "activityBar.activeBorder": "#14f597",
        "activityBar.border": "#01878785",
        "window.activeBorder": "#018786",
        "window.inactiveBorder": "#ffffff"
    },
    //
    "problems.autoReveal": true,
    "problems.decorations.enabled": true,
    //
    "php.suggest.basic": false,
    "php.validate.enable": false,
    "php.validate.executablePath": "/opt/homebrew/bin/php",
    "php.validate.run": "onType",
    //
    "files.eol": "\n",
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/.git": true,
        "**/.idea": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/.history": true,
        "**/._*": true,
        "**/Icon?": true,
        "**/Icon": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/node_modules/*/**": true,
        "**/vendor/*/**": true,
        "**/.history/*/**": true
    },
    "files.associations": {
        ".php_cs": "php",
        ".php_cs.dist": "php",
        "*.blade.php": "blade",
        "*.php": "php",
        "*.vue": "vue",
        "*.js": "javascript"
    },
    "files.hotExit": "onExit",
    //
    "search.exclude": {
        "**/.git": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/.history": true
    },
    "search.quickOpen.includeSymbols": true,
    "search.showLineNumbers": true,
    "search.collapseResults": "alwaysCollapse",
    //
    "window.newWindowDimensions": "inherit",
    "window.restoreFullscreen": true,
    "window.restoreWindows": "all",
    "window.openFilesInNewWindow": "on",
    "window.openFoldersInNewWindow": "on",
    "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}${separator}${appName}",
    //
    "markdown.preview.scrollEditorWithPreview": true,
    //
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.sortOrder": "default",
    "explorer.openEditors.visible": 0,
    //
    "debug.allowBreakpointsEverywhere": true,
    "debug.console.fontFamily": "Monaco",
    "debug.console.fontSize": 12,
    "debug.console.lineHeight": 0,
    "debug.inlineValues": "off",
    "debug.openExplorerOnEnd": true,
    // "debug.toolBarLocation": "docked",
    "debug.openDebug": "openOnFirstSessionStart",
    "debug.showInStatusBar": "always",
    "debug.showBreakpointsInOverviewRuler": true,
    //
    "extensions.autoCheckUpdates": true,
    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": true,
    //
    "javascript.format.enable": false, // Disable default JavaScript formatter (For Prettier)
    // Disabling the default JavaScript formatter allows Prettier to handle our code formatting.
    "typescript.format.enable": true,
    "javascript.validate.enable": true, // (For Flow - Disable default JavaScript validation)
    "typescript.validate.enable": true,
    "json.format.enable": true,
    //
    "html.autoClosingTags": true,
    "html.format.enable": true,
    "html.format.indentInnerHtml": true,
    "html.format.wrapLineLength": 120,
    "html.validate.scripts": true,
    "html.validate.styles": true,
    //
    "terminal.integrated.profiles.osx": {
        "MyTerminal": {
            "path": "/opt/homebrew/bin/zsh",
            "args": [
                "-l"
            ]
        }
    },
    "terminal.integrated.defaultProfile.osx": "MyTerminal",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.scrollback": 10000,
    "terminal.integrated.lineHeight": 1.3,
    "terminal.integrated.fontFamily": "Monaco",
    "terminal.integrated.env.osx": {
        "TERMINAL_VSCODE": "true"
    },
    //
    "git.enabled": true,
    "git.path": "/opt/homebrew/bin/git",
    "git.autorefresh": true,
    "git.autofetch": true,
    "git.untrackedChanges": "separate",
    //
    "emmet.includeLanguages": {
        "vue": "html",
        "vue-html": "html"
    },
    "emmet.triggerExpansionOnTab": true,

    // ==================
    // Extension Settings
    // ==================

    // ==
    // GO
    // ==
    "go.gopath": "/Users/allysonsilva/.go",

    // ================
    // PHP Intelephense
    // ================
    "intelephense.maxMemory": 512,
    "intelephense.environment.phpVersion": "8.1.9",
    "intelephense.diagnostics.undefinedTypes": true,
    "intelephense.stubs": [
        // https://github.com/JetBrains/phpstorm-stubs
        "Core",
        "curl",
        "date",
        "fileinfo",
        "filter",
        "ftp",
        "gd",
        "gmp",
        "hash",
        "intl",
        "json",
        "mysqli",
        "openssl",
        "pcntl",
        "pcre",
        "PDO",
        "pdo_mysql",
        "pdo_sqlite",
        "Phar",
        "Reflection",
        "session",
        "SimpleXML",
        "soap",
        "sockets",
        "sodium",
        "SPL",
        "sqlite3",
        "standard",
        "Zend OPcache",
        "redis"
    ],
    "intelephense.completion.triggerParameterHints": true,
    "intelephense.completion.fullyQualifyGlobalConstantsAndFunctions": true,
    "intelephense.completion.insertUseDeclaration": true,
    "intelephense.files.associations": [
        "*.php",
        "*.blade.php"
    ],
    "intelephense.files.exclude": [
        "**/.git/**",
        "**/.svn/**",
        "**/.hg/**",
        "**/CVS/**",
        "**/.DS_Store/**",
        "**/.history/**",
        "**/node_modules/**",
        "**/storage/**",
        "**/resources/views/**",
        "**/database/migrations/**",
        "**/bower_components/**",
        "**/vendor/**/{Test,test,Tests,tests}/**"
    ],
    "intelephense.format.enable": true,
    "intelephense.trace.server": "off",
    "intelephense.files.maxSize": 1000000,

    // ==============
    // PHPUnit Test Explorer for Visual Studio Code
    // ==============
    "phpunit.files": "{test,tests}/**/*Test.php",

    // ==============
    // PHP DocBlocker
    // ==============
    "php-docblocker.author": {
        "name": "Your Name",
        "email": "mail@yourdomain.tld"
    },
    "php-docblocker.useShortNames": true,
    "php-docblocker.gap": true,
    "php-docblocker.returnGap": true,
    "php-docblocker.qualifyClassNames": true,

    // ======================
    // PHP Namespace Resolver
    // ======================
    "namespaceResolver.exclude": "**/.history/**, **/node_modules/**", // Exclude glob pattern while finding files
    "namespaceResolver.showMessageOnStatusBar": false, // Show message on status bar instead of notification box
    "namespaceResolver.autoSort": true, // Auto sort after imports
    "namespaceResolver.sortOnSave": false, // Auto sort when a file is saved
    "namespaceResolver.leadingSeparator": true, // Expand class with leading namespace separator
    "namespaceResolver.sortAlphabetically": false, // Sort imports in alphabetical order instead of line length
    "namespaceResolver.sortNatural": false, // Sort imports using a 'natural order' algorithm

    // ======================
    // Laravel Blade Snippets
    // ======================
    "blade.format.enable": true,

    // ===================
    // Material Icon Theme
    // ===================
    "material-icon-theme.folders.color": "#1E90FF",
    "material-icon-theme.folders.theme": "specific",
    "material-icon-theme.languages.associations": {
        "php": "php_elephant"
    },
    "material-icon-theme.folders.associations": {
        "vendor": "php"
    },

    // ============================================
    // Bracket Pair Colorizer | Colorizer Pair Pair
    // ============================================
    "bracketPairColorizer.forceUniqueOpeningColor": true,
    "bracketPairColorizer.forceIterationColorCycle": true,
    "bracketPairColorizer.colorMode": "Consecutive",
    "bracketPairColorizer.highlightActiveScope": true,
    "bracketPairColorizer.showBracketsInGutter": true,
    "bracketPairColorizer.showBracketsInRuler": true,
    "bracketPairColorizer.rulerPosition": "Center",
    "bracketPairColorizer.consecutivePairColors": ["()", "[]", "{}", ["#32CD32", "#9400D3", "#1E90FF"], "Red"],

    // ==============
    // TODO Highlight
    // ==============
    "todohighlight.isEnable": true,
    "todohighlight.isCaseSensitive": false,
    "todohighlight.defaultStyle": {
        "color": "#FFF",
        "backgroundColor": "#3e0375",
        "overviewRulerColor": "#3e0375",
        "cursor": "pointer",
        "border": "1px solid #f5d108",
        "borderRadius": "3px",
        "isWholeLine": false,
    },
    "todohighlight.keywords": [
        "DEBUG:",
        "REVIEW:",
        {
            "text": "NOTE:",
            "backgroundColor": "#f57c00",
        },
        {
            "text": "FIXME:",
            "backgroundColor": "#018786",
        },
        {
            "text": "TODO:",
            "color": "red",
            "border": "1px solid red",
            "borderRadius": "3px",
            "backgroundColor": "rgba(0,0,0,.2)",
        }
    ],
    "todohighlight.include": [
        "**/*.js",
        "**/*.jsx",
        "**/*.vue",
        "**/*.ts",
        "**/*.tsx",
        "**/*.html",
        "**/*.php",
        "**/*.blade.php",
        "**/*.css",
        "**/*.scss"
    ],
    "todohighlight.exclude": [
        "**/.history/**",
        "**/node_modules/**",
        "**/bower_components/**",
        "**/dist/**",
        "**/build/**",
        "**/.vscode/**",
        "**/.git/**",
        "**/_output/**",
        "**/*.min.*",
        "**/*.map",
        "**/.next/**"
    ],
    "todohighlight.maxFilesForSearch": 5120,
    "todohighlight.toggleURI": true
}
